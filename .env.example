# Telegram Bot Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED SETTINGS
# =============================================================================

# Telegram Bot Token from @BotFather
BOT_TOKEN=your_bot_token_here

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================

# Environment: development / staging / production
ENVIRONMENT=development

# =============================================================================
# DATABASE SETTINGS
# =============================================================================

# SQLite database path (default)
DATABASE_PATH=./data/bot.db

# =============================================================================
# ADMIN SETTINGS
# =============================================================================

# Telegram User IDs of administrators (comma-separated)
ADMIN_IDS=123456789,987654321

# =============================================================================
# LOGGING SETTINGS
# =============================================================================

# Log level: DEBUG / INFO / WARNING / ERROR / CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=./logs/bot.log

# =============================================================================
# SCHEDULER SETTINGS
# =============================================================================

# Enable/disable scheduler
SCHEDULER_ENABLED=true

# Notification time (HH:MM)
NOTIFICATION_TIME=07:00

# Check interval in minutes
NOTIFICATION_INTERVAL_MINUTES=15

# =============================================================================
# API SETTINGS
# =============================================================================

# SUMDU API URL (optional)
SUMDU_API_URL=https://api.sumdu.edu.ua

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Max retries for API calls
MAX_RETRIES=3

# =============================================================================
# FORMATTING SETTINGS
# =============================================================================

# Time format (HH:MM)
TIME_FORMAT=%H:%M

# Date format (YYYY-MM-DD)
DATE_FORMAT=%Y-%m-%d

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Webhook URL (if using webhook mode)
WEBHOOK_URL=https://your-domain.com/webhook

# Webhook port
WEBHOOK_PORT=8443

# SSL certificate paths (for webhook)
SSL_CERT=/path/to/cert.pem
SSL_KEY=/path/to/key.pem

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Allowed Telegram user IDs (optional, stricter than ADMIN_IDS)
ALLOWED_USERS=

# Rate limit per user (requests per minute)
RATE_LIMIT=20
